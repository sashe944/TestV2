<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_view_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonView"
        android:layout_alignBottom="@+id/buttonView"
        android:layout_alignParentStart="true"
        android:text="Студентско име"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_view_faculty_number"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_view_student_name"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/tv_view_student_name"
        android:text="No"
        android:textSize="18dp" />

    <Button
        android:id="@+id/buttonView"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonstyleselector"
        android:text="Виж"
        android:textColor="#fff" />
</RelativeLayout>