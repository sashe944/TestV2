<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_view_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:text="Име на студент"
        android:textSize="18dp" />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_faculty_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="78dp"
        android:text="№"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_view_student_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_view_student_name"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <EditText
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/etAddComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_view_student_answer"
        android:layout_marginTop="82dp"
        android:inputType="textMultiLine"
        android:hint="Коментар" />


    <EditText
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/etAddPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAddComment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:inputType="textMultiLine"
        android:hint="Точки" />


</RelativeLayout>
