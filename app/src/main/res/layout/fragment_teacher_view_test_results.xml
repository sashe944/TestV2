<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.androidtestgame.TeacherViewTestResultsActivity">

    <TextView
        android:id="@+id/tv_teacher_views_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Студенти"
        android:textAlignment="center"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/lv_view_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_teacher_views_answers"
        android:layout_marginTop="24dp" />
</RelativeLayout>